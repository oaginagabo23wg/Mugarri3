import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class Dialog extends JDialog implements ActionListener {
    void Dialog(){
        JDialog dia = new JDialog();
        setLayout(null);
        setBounds(400,10,500,200);

        ImageIcon galdera = new ImageIcon(".\\irudiak\\galdera.jpg" );
        JLabel arg = new JLabel();
        arg.setBounds(0,0,50,50);
        ImageIcon ikono = new ImageIcon(galdera.getImage().getScaledInstance(arg.getWidth(), arg.getHeight(), Image.SCALE_DEFAULT));
        arg.setIcon(ikono);
        add(arg);

        JLabel label1 = new JLabel("Input password");
        label1.setBounds(60,10,100,30);
        add(label1);

        JTextField textField1 = new JTextField();
        textField1.setBounds(60,40,300,25);
        add(textField1);

        JButton aceptar = new JButton("Aceptar");
        aceptar.setBounds(80, 70,100,30);
        add(aceptar);

        JButton cancelar = new JButton("Cancelar");
        cancelar.setBounds(200, 70,100,30);
        add(cancelar);


        setVisible(true);

    }

    @Override
    public void actionPerformed(ActionEvent e) {

    }
}
